# Ensure all text files use CRLF line endings
* text=auto eol=crlf

# Python files
*.py text eol=crlf
*.pyw text eol=crlf
*.pyx text eol=crlf
*.pxd text eol=crlf

# Configuration files
*.ini text eol=crlf
*.cfg text eol=crlf
*.conf text eol=crlf
*.toml text eol=crlf
*.yml text eol=crlf
*.yaml text eol=crlf
*.json text eol=crlf
*.xml text eol=crlf

# Text files
*.txt text eol=crlf
*.md text eol=crlf
*.rst text eol=crlf
*.log text eol=crlf

# Requirements files
requirements*.txt text eol=crlf

# Test files
test_*.py text eol=crlf
*_test.py text eol=crlf
tests/*.py text eol=crlf

# Documentation
*.html text eol=crlf
*.css text eol=crlf
*.js text eol=crlf

# Git files
.gitattributes text eol=crlf
.gitignore text eol=crlf

# Other development files
Makefile text eol=crlf
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
